// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["path", "pattent_path", "titile"],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"path": {
			"bsonType": "string",
			"description": "菜单路径",
			"trim": "both"
		},
		"parrent_path": {
			"bsonType": "string",
			"title": "父菜单路径",
			"description": "父菜单路径",
			"trim": "both"
		},
		"title": {
			"bsonType": "string",
			"title": "菜单标题",
			"description": "菜单标题",
			"trim": "both"
		},
    "icon": {
    	"bsonType": "string",
    	"title": "菜单图标",
    	"description": "菜单图标",
    	"trim": "both"
    },
		"edit_enable": {
			"bsonType": "string",
			"title": "维护标识",
			"description": "规定admin角色的维护权限",
			"enum": {
			  "collection": "uni-system-dict-item", // 表名
			  "field": "dict_item_name as text, dict_item_code as value", //字段筛选，需要 as 成前端组件支持的字段名 text、value。text、value是datacom组件规范的标准
			  "where": "dict_code == 'edit_enable'", // 查询条件
			  "orderby": "number, asc" // 排序字段及正序倒叙设置
			}
		},
		"enable_status": {
			"bsonType": "string",
			"description": "启用状态",
      "defaultValue": "enable",
			"enum": {
			  "collection": "uni-system-dict-item", // 表名
			  "field": "dict_item_name as text, dict_item_code as value",
			  "where": "dict_code == 'enable_status'", // 查询条件
			  "orderby": "number, asc" // 排序字段及正序倒叙设置
			}
		},
    "kepp_alive": {
    	"bsonType": "string",
    	"description": "是否缓存路由组件",
      "defaultValue": "yes",
    	"enum": {
    	  "collection": "uni-system-dict-item", // 表名
    	  "field": "dict_item_name as text, dict_item_code as value",
    	  "where": "dict_code == 'whether'", // 查询条件
    	  "orderby": "number, asc" // 排序字段及正序倒叙设置
    	}
    },
    "is_leaf": {
    	"bsonType": "string",
    	"description": "是否为叶子节点",
      "defaultValue": "yes",
    	"enum": {
    	  "collection": "uni-system-dict-item", // 表名
    	  "field": "dict_item_name as text, dict_item_code as value",
    	  "where": "dict_code == 'whether'", // 查询条件
    	  "orderby": "number, asc" // 排序字段及正序倒叙设置
    	}
    },
    "open_mode": {
    	"bsonType": "string",
    	"description": "菜单打开方式",
      "defaultValue": "tab",
    	"enum": {
    	  "collection": "uni-system-dict-item", // 表名
    	  "field": "dict_item_name as text, dict_item_code as value",
    	  "where": "dict_code == 'whether'", // 查询条件
    	  "orderby": "number, asc" // 排序字段及正序倒叙设置
    	}
    },
    "creator": {
    	"bsonType": "string",
    	"description": "创建人",
    	"foreignKey": "uni-id-users._id",
      "forceDefaultValue": {
        "$env": "uid"
      }
    },
    "create_time": {
    	"bsonType": "timestamp",
    	"description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    },
		"last_reviser": {
			"bsonType": "string",
			"description": "最后修改人",
			"foreignKey": "uni-id-users._id",
		  "defaultValue": {
		    "$env": "uid"
		  }
		},
		"update_time": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
		  "defaultValue": {
		    "$env": "now"
		  }
		}
	}
}
