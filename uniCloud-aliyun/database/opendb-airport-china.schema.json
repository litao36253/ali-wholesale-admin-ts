/**
 * 国内机场表
 */

{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "机场名称"
		},
		"address": {
			"bsonType": "string",
			"description": "机场完整地址"
		},
		"location": {
			"bsonType": "object",
			"description": "机场地理位置经纬度(GeoPoint)"
		},
		"city_code": {
			"bsonType": "string",
			"description": "城市编码"
		},
		"city_name": {
			"bsonType": "string",
			"description": "城市名称"
		},
		"iata": {
			"bsonType": "string",
			"description": "国际航空运输协会(International Air Transport Association)编码"
		},
		"icao": {
			"bsonType": "string",
			"description": "国际民用航空组织(International Civil Aviation Organization)编码"
		},
		"level": {
			"bsonType": "string",
			"description": "飞行等级"
		},
		"status": {
			"bsonType": "int",
			"description": "状态",
			"enum": [{
				"value": 0,
				"text": "运营中"
			}, {
				"value": 1,
				"text": "规划中"
			}, {
				"value": 2,
				"text": "建设中"
			}, {
				"value": 3,
				"text": "已停航"
			}]
		},
		"enable_year": {
			"bsonType": "int",
			"description": "启用年份"
		},
		"first_letter": {
			"bsonType": "string",
			"description": "拼音首字母"
		}
	}
}
