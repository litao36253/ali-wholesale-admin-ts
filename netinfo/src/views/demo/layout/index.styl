html, body
	height 100%
	background $SP-layout-body-bgcolor
.layout-wrap
	display flex
	min-width 1003px
	width 100%
	height 100%
	padding 0
	overflow hidden
	box-sizing border-box
.layout-aside
	width 168px
	flex none
	height 100%
	background $SP-layout-aside-bgcolor
	overflow-y auto
	overflow-x hidden
	transition-property width
	transition-duration 0.4s
	transition-timing-function cubic-bezier(0.42, 0, 0.58, 1)
	&.collapse
		width 64px
		.layout-logo
			.soft-name
				display none
	.layout-logo
		width 100%
		height 60px
		border-bottom $SP-layout-logo-border-color 1px solid
		text-align center
		display flex
		justify-content center
		align-items center
		overflow hidden
		.logo-img
			display block
			width 64px
			height 30px
			overflow hidden
			text-align center
			img
				width 30px
				height @height
		.soft-name
			flex 1
			margin-left -20px
			height 30px
			line-height 30px
			font-size 14px
			color $SP-layout-logo-text-color
			font-weight 600
			overflow hidden
			white-space nowrap
.layout-body
	position relative
	flex 1
	height 100%
	display flex
	flex-direction column
	overflow hidden
	.layout-header
		flex none
		height 60px
		background $SP-layout-box-bgcolor
		border-bottom $SP-layout-border-color 1px solid
	.layout-bom-history
		flex none
		position relative
		height 32px
		background $SP-layout-bom-history-bgcolor
		border-bottom $SP-layout-bom-history-border-color 1px solid
	.layout-main
		position relative
		display flex
		flex-direction column
		flex 1
		overflow-y auto
		overflow-x hidden
		box-sizing border-box
		padding 0
.animated
	-webkit-animation-duration: 1s; // 动画执行时间
	animation-duration: 1s; // 动画执行时间
	-webkit-animation-fill-mode: both;
	animation-fill-mode: both;
