// - 组件样式
.page-login
	height 100%
	display flex
	flex-direction column
	background #ffffff
	.header
		width 100%
		height 120px
		padding 40px 30px
		box-sizing border-box
		align-items center
		align-content center
		border-bottom #eeeeee 1px solid
		.logo-img
			display inline-block
			width 40px
			height 40px
			overflow hidden
			vertical-align middle
			img
				width @width
				height @height
		.soft-name
			margin-left 10px
			display inline-block
			vertical-align middle
			height 40px
			line-height 40px
			font-size 30px
			color #333333
			font-weight 700
		.system-language
			float right
			margin 10px 40px 0 0
			.iconfont
				font-size 30px
				color: $color-primary
	.main
		width 100%
		flex 1
		overflow-y auto
		display flex
		align-items center
		padding 0 30px
		padding 0 30px
		.container
			display flex
		.banner
			flex 1
			height 440px
			// background url('~@/assets/images/login/banner.png') no-repeat center center
			// background-size auto 440px
			img
				width auto
				height 440px
		.form-login
			flex none
			width 420px
			height 440px
			background rgba(255, 255, 255, 1)
			box-shadow 0px 2px 15px 0px rgba(0, 0, 0, 0.07)
			border-radius 4px
			padding 16px 40px
			box-sizing border-box
			li
				padding 0 0 30px 0
			h2
				height 100px
				font-size 30px
				font-weight 400
				color rgba(58, 60, 62, 1)
				line-height 100px
				text-align center
	.footer
		width 100%
		height 50px
		padding 0 30px
		border-top #eeeeee 1px solid
		line-height 50px
		color #888888
		text-align center
		background #f2f2f2
// 重定义
.login
	.el-input__inner
		height 50px
		line-height 50px
.el-button
	&.login-submit
		width 100%
		display block
		height 50px
		font-size 16px
