.wrap
	width 100%
	height 100%
	box-sizing border-box
	.box-body
		overflow hidden
		background $SP-layout-box-bgcolor
		border-radius $SP-layout-border-radius
		width 100%
		height 100%
		display flex
		.menu
			height 100%
			width 320px
			flex none
			background-color #FAFAFA
			border-right 1px solid #E8E8E8
			display flex
			flex-direction column
			.menu-title
				height 46px
				border-bottom 1px solid #E8E8E8
				padding-left 20px
				line-height 46px
				color #3A3C3E
				font-size 15px
				font-weight bold
				flex none
			.menu-con
				flex 1
				overflow auto
				padding 20px 12px
		.form-wrap
			height 100%
			flex 1
			display flex
			flex-direction column
			padding-left 60px
			.from-title
				height 46px
				border-bottom 1px solid #E8E8E8
				line-height 46px
				color #3A3C3E
				font-size 15px
				font-weight bold
				flex none
			.form
				flex 1
				height 0
.settingpart
	width: 76%
.settingtitle
	font-size 14px
	font-family MicrosoftYaHei
	font-weight bold
	color #495061
	line-height 36px
	padding-top 12px
.settingitem
	font-size 14px
	line-height 32px
	padding-left 20px
	padding-bottom 28px
	padding-top 12px
